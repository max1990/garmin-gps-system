[Unit]
Description=Heading Reader Service
After=network-online.target
Wants=network-online.target
Before=gps-stream.service

[Service]
Type=simple
ExecStart=/usr/bin/python3 /home/cuas/heading_reader.py
WorkingDirectory=/home/cuas
User=root
Group=root
Environment=PYTHONUNBUFFERED=1
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal
SyslogIdentifier=heading-reader

[Install]
WantedBy=multi-user.target
